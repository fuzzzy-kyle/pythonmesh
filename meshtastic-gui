#!/usr/bin/env python3
"""
Meshtastic GUI launcher script

A standalone script to launch the Meshtastic GUI application.
"""

import sys
import os

# Add the current directory to Python path so we can import meshtastic
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

try:
    from meshtastic.gui import main
    main()
except ImportError as e:
    print(f"Error importing meshtastic.gui: {e}")
    print("Make sure you have installed the meshtastic package and its dependencies.")
    sys.exit(1)
except Exception as e:
    print(f"Error running GUI: {e}")
    sys.exit(1)